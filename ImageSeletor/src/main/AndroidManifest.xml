<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.lijunguan.imgselector">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:supportsRtl="true">
        <activity
            android:name=".album.AlbumActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:label="@string/album_activity_title"
            android:theme="@style/AlbumTheme" />

        <activity
            android:screenOrientation="portrait"
            android:name=".cropimage.CropActivity"
            android:label="@string/crop_activity_title"
            android:theme="@style/AlbumTheme" />
    </application>

</manifest>